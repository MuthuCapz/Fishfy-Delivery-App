<!-- custom_dialog_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/llorange"
    android:padding="15dp"
    android:background="@drawable/cardstroke2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Time Slot"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:padding="16dp"
        android:gravity="center"/> n

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10.00 Am - 12.00 Pm"
            android:textColor="@color/black"
            android:button="@drawable/custome_radiobutton"
            android:theme="@style/RadioButtonStyle"
            android:padding="12dp"/>

        <RadioButton
            android:id="@+id/radio_option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/custome_radiobutton"
            android:theme="@style/RadioButtonStyle"

            android:textColor="@color/black"
            android:text="02.00 Pm - 05.00 Pm"
            android:padding="12dp"/>

        <RadioButton
            android:id="@+id/radio_option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/custome_radiobutton"
            android:theme="@style/RadioButtonStyle"

            android:textColor="@color/black"
            android:text="07.00 Pm - 10.00 Pm"
            android:padding="12dp"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="120dp"

            android:layout_height="wrap_content"
            android:background="@drawable/greenbuttongradent"
            android:text="Cancel"
            android:textColor="@color/white"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ok"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="OK"
            android:background="@drawable/greenbuttongradent"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
