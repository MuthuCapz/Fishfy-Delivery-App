<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:background="@color/lblue"
    android:id="@+id/container"
    tools:context=".ui.activities.fragments.CurrentLocationBottomSheet"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/neww"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="New Address"
        android:textSize="18dp"
        android:background="@drawable/bg"
        android:fontFamily="@font/roboto"
        android:paddingTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/shopnameTextView"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="New Address"
        android:textSize="18dp"
        android:background="@drawable/bg"
        android:fontFamily="@font/roboto"
        android:paddingTop="8dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/detailGoToBackImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left"
        android:contentDescription="@string/image_desc_text" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/lblue"
        app:layout_constraintTop_toBottomOf="@id/neww"
        app:layout_constraintBottom_toTopOf="@id/Address_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:id="@+id/building"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BUILDING NAME"
                    android:textColor="@color/navy"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="3dp" />
                <EditText
                    android:id="@+id/et_building_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Building Name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textColorHint="@color/ThickAsh"
                    android:textSize="13sp"
                    android:paddingBottom="20dp"
                    android:backgroundTint="@color/ash"
                    android:lineHeight="1dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/namee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:textColor="@color/navy"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="3dp"/>
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textColorHint="@color/ThickAsh"
                    android:textSize="13sp"
                    android:paddingBottom="20dp"
                    android:backgroundTint="@color/ash"
                    android:lineHeight="1dp"
                    android:inputType="textPersonName"
                    android:maxLines="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mobilee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MOBILE NUMBER"
                    android:textColor="@color/navy"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="3dp"/>
                <EditText
                    android:id="@+id/et_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textColorHint="@color/ThickAsh"
                    android:textSize="13sp"
                    android:paddingBottom="20dp"
                    android:backgroundTint="@color/ash"
                    android:lineHeight="1dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/house"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HOUSE/FLOT NO"
                    android:textColor="@color/navy"

                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="3dp"/>
                <EditText
                    android:id="@+id/et_house_flat_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="House/Flat No"
                    android:inputType="text"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textColorHint="@color/ThickAsh"
                    android:textSize="13sp"
                    android:paddingBottom="20dp"
                    android:backgroundTint="@color/ash"
                    android:lineHeight="1dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/streetname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="STREET NAME"
                    android:textColor="@color/navy"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="3dp" />
                <EditText
                    android:id="@+id/et_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Street"
                    android:inputType="text"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textColorHint="@color/ThickAsh"
                    android:textSize="13sp"
                    android:paddingBottom="20dp"
                    android:backgroundTint="@color/ash"
                    android:lineHeight="1dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PINCODE"
                    android:textColor="@color/navy"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="3dp" />
                <EditText
                    android:id="@+id/et_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pincode"
                    android:inputType="number"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textColorHint="@color/ThickAsh"
                    android:textSize="13sp"
                    android:paddingBottom="20dp"
                    android:backgroundTint="@color/ash"
                    android:lineHeight="1dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/locality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LOCALITY"
                    android:textColor="@color/navy"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="3dp" />
                <EditText
                    android:id="@+id/et_locality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Locality"
                    android:inputType="text"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    android:textColorHint="@color/ThickAsh"
                    android:textSize="13sp"
                    android:paddingBottom="20dp"
                    android:backgroundTint="@color/ash"
                    android:lineHeight="1dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="35dp"
                android:gravity="left">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_save_as_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOME"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/home"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/navy"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/colorlinear" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_save_as_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="WORK"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/work"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/navy"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/colorlinear" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_save_as_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="OTHER"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/loco"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/navy"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/colorlinear" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Address_save"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/greenbuttongradent"
        android:elevation="5dp"
        android:fontFamily="@font/robo_font"
        android:text="SAVE ADDRESS"
        android:textFontWeight="500"
        android:lineHeight="20px"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/scroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
