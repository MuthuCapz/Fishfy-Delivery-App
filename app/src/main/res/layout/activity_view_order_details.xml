<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lblue"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/detailGoToBackImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left1"
        android:contentDescription="@string/image_desc_text" />


    <androidx.cardview.widget.CardView
        android:id="@+id/viewOrder"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"

            android:paddingRight="15dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/foodImage"
                android:layout_width="65dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"

                android:layout_height="65dp"
                />
            <ImageView
                android:id="@+id/foodImage1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="fitXY"

                android:adjustViewBounds="true"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:id="@+id/foodImage2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginStart="10dp"/>

            <ImageView
                android:id="@+id/foodImage3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginStart="10dp"/>

            <ImageView
                android:id="@+id/foodImage4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginStart="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"

                android:fontFamily="@font/nunito"
                android:textColor="@color/black"
                android:text="Customer Id :"/>

            <TextView
                android:id="@+id/oid"
                android:textSize="15dp"

                android:fontFamily="@font/nunito"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Order Id :"/>

            <TextView
                android:id="@+id/foodName"
                android:textSize="15dp"
                android:fontFamily="@font/nunito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:textColor="@color/black"
                android:text="Food Name :"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/foodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"

                android:fontFamily="@font/nunito"
                android:textColor="@color/blue"
                android:text="Food Price:"/>

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"

                android:textSize="15dp"
                android:fontFamily="@font/nunito"
                android:textColor="@color/black"
                android:text="Quantity :"/>

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/orderstatus"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="290dp"
            android:background="@drawable/greenbuttongradent"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:backgroundTint="@color/navy"
            android:layout_marginStart="20dp"
            android:text="Order Status" />
        <RadioButton
            android:id="@+id/radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel Order"
            android:textSize="15dp"
            android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:layout_marginTop="290dp"
            android:layout_marginStart="200dp"/>
        <TextView
            android:id="@+id/cancelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"
            android:fontFamily="@font/nunito"
            android:textColor="@color/navy"
            android:layout_marginTop="283dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="180dp"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Time"
            android:textSize="15dp"
            android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:layout_marginTop="340dp"
            android:layout_marginStart="230dp"/>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>