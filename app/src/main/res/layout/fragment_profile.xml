<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTint="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:background="@drawable/shape">

        <!-- ImageView before the text -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left1"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:id="@+id/back"
            android:contentDescription="Image Description" />

        <!-- TextView "My Account" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Account"
            android:textSize="20sp"
            android:fontFamily="@font/nunito"
            android:textFontWeight="500"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:background="@color/llorange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/container_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_products_list_item"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/image_location"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_profile"
                    android:padding="8dp"
                    android:src="@drawable/user"
                    app:tint="@color/navy"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/image_location"
                    android:fontFamily="@font/nunito"
                    android:text="My profile"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_right"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_products_list_item"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/image_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_profile"
                    android:padding="12dp"
                    android:src="@drawable/menu"
                    app:tint="@color/navy"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/image_settings"
                    android:fontFamily="@font/nunito"
                    android:text="My orders"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_right"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_products_list_item"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/image_language"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:background="@drawable/bg_profile"
                    android:padding="12dp"
                    android:src="@drawable/baseline_language_24"
                    app:tint="@color/navy"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/image_language"
                    android:fontFamily="@font/nunito"
                    android:text="Language"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_right"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_products_list_item"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/addressimage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_profile"
                    android:padding="8dp"
                    android:src="@drawable/home"
                    app:tint="@color/navy"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/addressimage"
                    android:fontFamily="@font/nunito"
                    android:text="Addresses"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_right"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_products_list_item"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/logoutimage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_profile"
                    android:padding="8dp"
                    android:src="@drawable/logout_icon"
                    app:tint="@color/navy"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/logoutimage"
                    android:fontFamily="@font/nunito"
                    android:text="Logout"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_right"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/container_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_products_list_item"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_profile"
                    android:padding="8dp"

                    android:src="@drawable/baseline_delete_24"
                    app:tint="@color/navy"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/delete"
                    android:fontFamily="@font/nunito"
                    android:text="Delete Account"

                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_right"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/container_aboutus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_products_list_item"
                android:padding="12dp">

            <ImageView
                android:id="@+id/image_service"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_profile"
                android:padding="8dp"
                android:src="@drawable/baseline_info_24"
                app:tint="@color/navy"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/image_service"
                android:fontFamily="@font/nunito"
                android:text="About us"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/ic_right"
                tools:ignore="ContentDescription" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
