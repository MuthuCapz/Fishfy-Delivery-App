<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".ui.activities.fragments.ShopOneFragment">

        <ImageView
            android:id="@+id/recentBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow_left1"
            android:contentDescription="@string/image_desc_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=""
            android:textFontWeight="500"
            android:textSize="23dp"
            android:textAlignment="center"
            android:fontFamily="@font/nunito"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="15dp"
            android:textColor="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/shop1pic"
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="210dp"
            android:src="@drawable/shoppic" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="400dp"
            android:gravity="center">
            <com.example.loadinganimation.LoadingAnimation
                android:id="@+id/progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:elevation="10dp"
                app:barType="@drawable/clock"
                app:boldText="false"
                app:enlarge="5"
                app:textColor="@color/navy"
                app:textSize="15sp" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popularRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/deals_item"
            android:padding="3dp"
            android:background="@color/llorange"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView13"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito"
            android:text="Dry Fish"
            android:textFontWeight="500"
            android:textColor="@color/navy"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/popularRecyclerView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popularRecyclerView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="3dp"
            tools:listitem="@layout/menu_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView19"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="280dp"
            android:fontFamily="@font/nunito"
            android:text="Pickles"
            android:textFontWeight="500"
            android:textColor="@color/navy"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/popularRecyclerView1"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popularRecyclerView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            tools:listitem="@layout/menu_item"
            android:background="@color/llorange"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView21"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/shrimp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="280dp"
            android:fontFamily="@font/nunito"
            android:text="Shrimps"
            android:textFontWeight="500"
            android:textColor="@color/navy"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/popularRecyclerView3"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shrimpRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            tools:listitem="@layout/menu_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shrimp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/lobster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="280dp"
            android:fontFamily="@font/nunito"
            android:text="Lobsters"
            android:textFontWeight="500"
            android:textColor="@color/navy"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/shrimpRecycler"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lobsterRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            tools:listitem="@layout/menu_item"
            android:background="@color/llorange"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lobster"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/crab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="280dp"
            android:fontFamily="@font/nunito"
            android:text="Crabs"
            android:textFontWeight="500"
            android:textColor="@color/navy"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/lobsterRecycler"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/crabRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            tools:listitem="@layout/menu_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crab"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/shop1pic"
            android:fontFamily="@font/nunito"
            android:text="Deal Of The Day"
            android:visibility="gone"
            android:textFontWeight="500"
            android:textColor="@color/navy"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/popularRecyclerView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popularRecyclerView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            tools:listitem="@layout/menu_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/popularRecyclerView3"
            android:orientation="horizontal" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
