<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="@color/llorange"
    android:background="@drawable/cardstroke2"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Confirmation"
        android:textSize="18sp"
        android:fontFamily="@font/roboto"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to remove this item?"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_button_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:fontFamily="@font/roboto"
            android:textColor="@android:color/white"
            android:background="@drawable/greenbuttongradent"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_button_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textColor="@android:color/white"
            android:background="@drawable/greenbuttongradent"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginStart="20dp"
            android:paddingTop="8dp"
            android:fontFamily="@font/roboto"
            android:paddingBottom="8dp"
            android:layout_marginEnd="8dp"/>



    </LinearLayout>
</LinearLayout>
