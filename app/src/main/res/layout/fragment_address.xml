<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical"
        tools:context=".ui.activities.fragments.AddressFragment"
        tools:ignore="MissingDefaultResource">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Select Address"
            android:textSize="18dp"
            android:background="@drawable/bg"
            android:fontFamily="@font/roboto"
            android:paddingTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textColor="@color/black"
            />
        <ImageButton
            android:id="@+id/detailGoToBackImageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow_left"
            android:contentDescription="@string/image_desc_text" />

        <TextView
            android:id="@+id/saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved Addresses"
            android:textSize="18dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/dark_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/addressrecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:spanCount="3"
            tools:itemCount="3"

            android:padding="4dp"

            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/saved"
            />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/new_address"

                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/colorlinear"
                android:elevation="5dp"
                android:fontFamily="@font/robo_font"
                android:text="Add New Address"
                android:drawableTint="@color/white"
                android:textFontWeight="500"
                android:lineHeight="20px"
                android:textAllCaps="false"
                android:textColor="@color/navy"
                android:textSize="16sp"
               app:layout_constraintTop_toBottomOf="@id/addressrecycler"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Address_comfirm"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/greenbuttongradent"
            android:elevation="5dp"
            android:fontFamily="@font/robo_font"
            android:text="Comfirm Address"
            android:textFontWeight="500"
            android:lineHeight="20px"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/new_address"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>