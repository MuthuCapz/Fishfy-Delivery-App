<!-- background_with_stroke.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Outer background color -->
    <solid android:color="@color/navy" />

    <!-- Stroke settings -->
    <stroke
        android:width="1dp"
        android:color="@color/navy" />
    <corners
        android:radius="4dp"/>

    <!-- Padding inside the shape -->
    <padding
        android:left="3dp"
        android:top="5dp"
        android:right="3dp"
        android:bottom="5dp" />
</shape>
