<!-- res/drawable/card_stroke.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer -->
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="@color/white"/>
            <!-- Background color -->
        </shape>
    </item>

    <!-- Stroke layer -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#F8EADA"/> <!-- Stroke color -->
            /> <!-- Corner radius -->
        </shape>
    </item>
</layer-list>
